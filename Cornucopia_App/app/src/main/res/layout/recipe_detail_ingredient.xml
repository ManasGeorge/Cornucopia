<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recipe_detail_ingredient_quantity_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/text_margin_small"
        android:layout_marginEnd="@dimen/text_margin"
        android:layout_marginStart="@dimen/text_margin_small"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_toEndOf="@+id/recipe_detail_ingredient_name"
        android:text="@string/grocery_expiration_date_title"
        android:textAlignment="textEnd"
        android:textAppearance="@style/CardHeadingStyle" />

    <TextView
        android:id="@+id/recipe_detail_ingredient_quantity"
        style="@style/CardContentStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/recipe_detail_ingredient_quantity_header"
        android:layout_marginBottom="@dimen/text_margin_small"
        android:layout_marginEnd="@dimen/text_margin"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_toEndOf="@+id/recipe_detail_ingredient_name"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/recipe_detail_ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginStart="@dimen/text_margin"
        android:textAppearance="@style/CardMainStyle" />

</RelativeLayout>