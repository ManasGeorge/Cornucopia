<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_height="110dp"
    android:layout_width="match_parent">

    <ImageView android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="fitXY"
        android:id="@+id/recipe_ingredient_card_small_recipe_image"
        android:layout_width="match_parent" />

    <android.support.percent.PercentRelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/recipe_ingredient_card_small_recipe_name"
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content" />

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/recipe_ingredient_card_small_recipe_favorited"
                android:layout_width="match_parent"
                android:gravity="left"
                android:layout_alignParentLeft="true"
                android:text="{fa-heart-empty}"
                android:layout_height="wrap_content" />
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/recipe_ingredient_card_small_recipe_time"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="{stop-watch}"
                android:layout_height="wrap_content" />
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/recipe_ingredient_card_small_recipe_pantry_status"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="{pantry-check}"
                android:layout_height="wrap_content" />
        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>

</android.support.v7.widget.CardView>
